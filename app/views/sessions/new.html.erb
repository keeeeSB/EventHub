<h2 class="text-center mb-4">ログイン</h2>

<div class="container d-flex justify-content-center">
  <div class="col-md-6">
    <%= form_with(scope: :session, url: login_path, local: true, class: "border p-4 shadow rounded") do |f| %>

      <div class="mb-3">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, placeholder: "６文字以上で", class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "ログイン", class: "btn btn-info w-100" %>
      </div>
      
    <% end %>
  </div>
</div>
