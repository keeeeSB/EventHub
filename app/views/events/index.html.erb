<h2 class="text-center mb-4">イベント一覧</h2>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm border-light">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <p class="card-text"><%= event.description.truncate(100) %></p>
          <p><strong>開催日時:</strong> <%= event.start_time.strftime("%Y年%m月%d日 %H:%M") %></p>
          <p><strong>開催場所:</strong> <%= event.location %></p>
          <% if event.category.present? %>
            <p><strong>カテゴリー:</strong> <%= event.category.name %></p>
          <% end %>
          <%= link_to "詳細を見る", user_event_path(event.user, event), class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
