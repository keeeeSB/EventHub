<h2 class="text-center mb-4">レビュー詳細</h2>

<div class="container">
  <div class="card">
    <div class="card-header">
      <h3>レビュー情報</h3>
    </div>
    <div class="card-body">
      <p><strong>イベント:</strong> <%= @review.event.title %></p>
      <p><strong>ユーザー:</strong> <%= @review.user.name %></p>
      <p><strong>評価:</strong> <%= @review.rating %></p>
      <p><strong>内容:</strong> <%= @review.body %></p>
      <p><strong>作成日時:</strong> <%= @review.created_at.strftime('%Y-%m-%d %H:%M') %></p>
      <p><strong>更新日時:</strong> <%= @review.updated_at.strftime('%Y-%m-%d %H:%M') %></p>
    </div>
    <div class="card-footer">
      <%= link_to '戻る', admin_reviews_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
