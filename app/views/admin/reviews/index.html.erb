<h1 class="text-center mb-4">レビュー管理</h1>

<div class="container">
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>イベント</th>
          <th>ユーザー</th>
          <th>評価</th>
          <th>アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.event.title %></td>
            <td><%= review.user.name %></td>
            <td><%= review.rating %></td>
            <td>
              <%= link_to "詳細", admin_review_path(review), class: "btn btn-info btn-sm" %>
              <%= link_to '削除', admin_review_path(review), data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか？" },
                                                             class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
