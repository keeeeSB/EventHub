<h1 class="text-center mb-4">ユーザー管理</h1>

<div class="container">
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>アクション</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to '詳細', admin_user_path(user), class: "btn btn-info btn-sm" %>
              <%= link_to '編集', edit_admin_user_path(user), class: "btn btn-warning btn-sm" %>
              <%= link_to '削除', admin_user_path(user), data: { "turbo-method": :delete, turbo_confirm: "本当に削除しますか？" },
                                                         class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
