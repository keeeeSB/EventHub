<h2 class="text-center mb-4">ユーザー編集</h2>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for [:admin, @user], html: { class: 'form' } do |f| %>
        <div class="form-group">
          <%= f.label :name, '名前' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image, 'プロフィール画像' %>
          <%= f.file_field :profile_image, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :bio, '自己紹介' %>
          <%= f.text_area :bio, class: 'form-control' %>
        </div>

        <%= f.submit '更新', class: 'btn btn-primary' %>
        <%= link_to '戻る', admin_user_path(@user), class: 'btn btn-secondary' %>
      <% end %>
    </div>
  </div>
</div>
